{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "clang build",
      "command": "clang",
      "args": [
        "srcs/*.c",
        "srcs/*/*.c",
        "libft/libft.a",
        "-g",
        "-Iincludes",
        "-Ilibft"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "tests",
      "command": "clang",
      "args": ["tests/*.c", "libft/libft.a", "-g", "-Iincludes", "-Ilibft"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
